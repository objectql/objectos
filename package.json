{
  "name": "objectql-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "license": "AGPL-3.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "better-sqlite3",
      "esbuild",
      "sqlite3",
      "unrs-resolver"
    ],
    "ignoredBuiltDependencies": [
      "sharp"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "start": "pnpm objectstack:serve",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check --continue",
    "audit:spec": "node scripts/audit-spec-compliance.mjs",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish",
    "site:dev": "pnpm --filter @objectos/site dev",
    "site:build": "pnpm --filter @objectos/site build",
    "site:preview": "pnpm --filter @objectos/site start",
    "web:dev": "pnpm --filter @objectos/web dev",
    "web:build": "pnpm --filter @objectos/web build",
    "web:start": "pnpm --filter @objectos/web start",
    "objectstack:serve": "objectstack serve"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@objectstack/cli": "^1.0.11",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  },
  "version": "0.1.0",
  "dependencies": {
    "@objectos/audit": "workspace:*",
    "@objectos/auth": "workspace:*",
    "@objectos/automation": "workspace:*",
    "@objectos/cache": "workspace:*",
    "@objectos/i18n": "workspace:*",
    "@objectos/jobs": "workspace:*",
    "@objectos/metrics": "workspace:*",
    "@objectos/notification": "workspace:*",
    "@objectos/permissions": "workspace:*",
    "@objectos/realtime": "workspace:*",
    "@objectos/storage": "workspace:*",
    "@objectos/workflow": "workspace:*",
    "@objectql/core": "^4.1.0",
    "@objectql/driver-mongo": "^4.1.0",
    "@objectql/driver-sql": "^4.1.0",
    "@objectql/platform-node": "^4.1.0",
    "@objectstack/spec": "1.0.11",
    "build": "^0.1.4",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  }
}
