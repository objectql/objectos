{
  "name": "objectql-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/presets/*",
    "packages/plugins/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run web\" --kill-others --names \"SERVER,WEB\" -c \"magenta,blue\"",
    "server": "npm run dev --workspace=@objectql/server",
    "web": "npm run dev --workspace=@objectql/web",
    "build": "tsc -b && npm run build --workspaces",
    "start": "npm run start --workspace=@objectql/server",
    "test": "npm run test --workspaces",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.4"
  },
  "version": "0.1.0",
  "dependencies": {
    "@objectql/core": "^1.1.0",
    "@objectql/driver-knex": "^1.1.0",
    "@objectql/driver-mongo": "^1.1.0",
    "@objectql/metadata": "^0.2.0",
    "build": "^0.1.4"
  }
}
