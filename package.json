{
  "name": "objectql-monorepo",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "sqlite3",
      "@nestjs/core",
      "esbuild"
    ]
  },
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run web:watch\" --kill-others --names \"SERVER,WEB\" -c \"magenta,blue\"",
    "server": "pnpm --filter @objectos/server dev",
    "web": "pnpm --filter @objectos/web dev",
    "web:watch": "pnpm --filter @objectos/web build:watch",
    "build": "tsc -b && pnpm -r build",
    "start": "pnpm --filter @objectos/server start:prod",
    "test": "pnpm -r test",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.4"
  },
  "version": "0.1.0",
  "dependencies": {
    "@objectql/core": "^1.4.0",
    "@objectql/driver-knex": "^1.4.0",
    "@objectql/driver-mongo": "^1.4.0",
    "build": "^0.1.4"
  }
}
