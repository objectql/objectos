{
  "name": "@objectos/automation",
  "version": "0.1.0",
  "type": "module",
  "license": "AGPL-3.0",
  "description": "Automation plugin for ObjectOS - triggers, actions, and formula fields",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean && tsc --emitDeclarationOnly --declaration",
